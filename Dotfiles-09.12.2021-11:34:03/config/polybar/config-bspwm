format-discharging-background = ${colors.primary}
format-discharging-foreground = ${colors.modules}
format-discharging-underline = ${colors.modules}

format-full = <label-full>
format-full-padding = 1
format-full-background = ${colors.primary}
format-full-foreground = ${colors.modules}
format-full-underline = ${colors.modules}

ramp-capacity-0 = "%{T4}%{T-}"
ramp-capacity-1 = "%{T4}%{T-}" 
ramp-capacity-2 = "%{T4}%{T-}"   
ramp-capacity-3 = "%{T4}%{T-}" 
ramp-capacity-4 = "%{T4}%{T-}" 

###########################################################

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

label = "%temperature-c%"
label-warn = "%temperature-c%"

ramp-0 = ""
ramp-1 = ""
ramp-2 = ""

format = <ramp> <label>
format-padding = 1
format-background = ${colors.primary}
format-foreground = ${colors.modules}
format-underline = ${colors.modules}

format-warn = <ramp> <label-warn>
format-warn-background = ${colors.primary}
format-warn-foreground = ${colors.modules}

###########################################################

[module/cpu]

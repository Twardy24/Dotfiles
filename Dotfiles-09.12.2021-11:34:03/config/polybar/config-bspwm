###########################################################
##Inactive modules#########################################
###########################################################

[module/pacman-updates]
type = custom/script
interval = 600
exec = checkupdates | wc -l
label =  %output%

format-padding = 0
format-foreground = ${colors.primary}
format-background = ${colors.modules}

###########################################################

[module/spotify]
type = custom/script
tail = true
exec = ~/.config/polybar/scripts/scroll_spotify_status.sh

format-prefix = " "
format = <label>
format-foreground = ${colors.primary}
format-background = ${colors.modules}

###########################################################

[module/spotify-prev]
type = custom/script
exec = echo "  "
click-left = playerctl previous spotify

format = <label>
format-foreground = ${colors.primary}
format-background = ${colors.modules}

###########################################################

[module/spotify-play-pause]
type = custom/script
exec = echo " "
click-left = playerctl play-pause spotify

format = <label>
format-foreground = ${colors.primary}
format-background = ${colors.modules}

###########################################################

[module/spotify-next]
type = custom/script
exec = echo " "
click-left = playerctl next spotify

format = <label>
format-foreground = ${colors.primary}
format-background = ${colors.modules}

###########################################################
##Modules left#############################################
###########################################################

[module/xwindow]
type = internal/xwindow
label = "%title:0:30:%"

format-background = ${colors.background}
format-foreground = ${colors.secondary}

[module/pipe]
type = custom/text
content = "| "

format-background = ${colors.background}
format-foreground = ${colors.secondary}

###########################################################
##Modules right############################################
###########################################################

[module/date]
type = internal/date
interval = 1
label = "%{T3}%{T-}%date% %time%"

time = "%H:%M:%S"
time-alt = "%H:%M:%S"
date = ""
date-alt = " %d.%m.%Y"

format-padding = 1
format-background = ${colors.primary}
format-foreground = ${colors.modules}
format-underline = ${colors.modules}

###########################################################

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0
label-connected = "%local_ip%"

format-connected = <ramp-signal> <label-connected>
format-connected-padding = 1
format-connected-background = ${colors.primary}
format-connected-foreground = ${colors.modules}
format-connected-underline = ${colors.modules}

format-disconnected = "%{T3} %{T-} disconnected"
format-disconnected-padding = 1
format-disconnected-background = ${colors.primary}
format-disconnected-foreground = ${colors.modules}
format-disconnected-underline = ${colors.modules}

ramp-signal-0 = "%{T3}%{T-}"
ramp-signal-1 = "%{T3}%{T-}"
ramp-signal-2 = "%{T3}%{T-}"
ramp-signal-3 = "%{T3}%{T-}"
ramp-signal-4 = "%{T3}%{T-}"

###########################################################

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5

label-volume = %percentage%%
label-muted = ""

format-volume = <ramp-volume> <label-volume>
format-volume-padding = 1
format-volume-background = ${colors.primary}
format-volume-foreground = ${colors.modules}
format-volume-underline = ${colors.modules}

format-muted-padding = 1
format-muted-background = ${colors.primary}
format-muted-foreground = ${colors.modules}
format-muted-underline = ${colors.modules}

ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-2 = ""

###########################################################

[module/xbacklight]
type = internal/xbacklight
label = " %percentage%%"

format = <label>
format-padding = 1 
format-background = ${colors.primary}
format-foreground = ${colors.modules}
format-underline = ${colors.modules}

###########################################################

[module/battery]

[colors]
background = #0D0D0F
foreground = #ffffff
modules = #e5eaf0
primary = #CC212129
secondary = #ffffff

[bar/example]
width = 100%
height = 23
radius = 0.0
fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 1
line-color = ${colors.modules}


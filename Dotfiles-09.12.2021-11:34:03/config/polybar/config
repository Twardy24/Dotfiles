[module/date]
type = internal/date
interval = 1
label = "%{T3}%{T-}%date% %time%"

time = "%H:%M:%S"
time-alt = "%H:%M:%S"
date = ""
date-alt = " %d.%m.%Y"

format-padding = 1
format-underline = ${colors.modules-date}
format-foreground = ${colors.primary}

###########################################################

[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0
label-connected = "%local_ip%"

format-connected-padding = 1
format-connected = <ramp-signal> <label-connected>
format-connected-underline = ${colors.modules-wlan}
format-connected-foreground = ${colors.primary}

format-disconnected = "%{T3} %{T-} disconnected"
format-disconnected-padding = 1
format-disconnected-underline = ${colors.modules-wlan}
format-disconnected-foreground = ${colors.primary}

ramp-signal-0 = "%{T3}%{T-}"
ramp-signal-1 = "%{T3}%{T-}"
ramp-signal-2 = "%{T3}%{T-}"
ramp-signal-3 = "%{T3}%{T-}"
ramp-signal-4 = "%{T3}%{T-}"

###########################################################

[module/pulseaudio]
type = internal/pulseaudio
use-ui-max = true
interval = 5

label-volume = %percentage%%
label-muted = ""

format-volume = <ramp-volume> <label-volume>
format-volume-padding = 1
format-volume-underline = ${colors.modules-pulseaudio}
format-volume-foreground = ${colors.primary}

format-muted-padding = 1
format-muted-underline = ${colors.modules-pulseaudio}
format-muted-foreground = ${colors.primary}

ramp-volume-0 = ""
ramp-volume-1 = ""
ramp-volume-2 = ""

###########################################################


format-padding = 1
format-prefix = " "

format-background = ${colors.primary}
format-foreground = ${colors.modules}
format-underline = ${colors.modules}

###########################################################

[module/powermenu]
type = custom/menu

label-open = "%{T3}%{T-}"
label-close = cancel
label-separator = |

format-padding = 1
format-spacing = 1

format-background = ${colors.primary}
format-foreground = ${colors.modules}
format-underline = ${colors.modules}

menu-0-0 = power off
menu-0-0-exec = poweroff

menu-0-1 = reboot 
menu-0-1-exec = sudo reboot
 
menu-0-2 = log out 
menu-0-2-exec = i3-msg exit

###########################################################

